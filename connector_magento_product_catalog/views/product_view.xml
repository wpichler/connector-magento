<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<record id="view_magento_product_catalog_form"
		model="ir.ui.view">
		<field name="name">magento.product.product.catalog.form</field>
		<field name="model">magento.product.product</field>
		<field name="inherit_id"
			ref="connector_magento.view_magento_product_form"></field>
		<field name="arch" type="xml">
			<sheet position="inside">
				<group>

					<field name="attribute_set_id" required="1" />
				</group>
			</sheet>

			<xpath expr="//div[@name='button_box']" position="inside">
				<button name="export_product_button" class="oe_stat_button"
					string="Export Attributes" type="object" />
				<button name="resync" string="resyn All"
					class="oe_stat_button" help="Stck, Attributes, ..." type="object" />
				<button name="%(action_magento_custom_attributes)d"
					type="action" string="Custom Values" class="oe_stat_button"
					context="{'search_default_magento_product_id': [active_id], 
							'default_attribute_set_id': attribute_set_id,
							'default_magento_product_id': active_id, }" />

			</xpath>
		</field>
	</record>


	<record model="ir.ui.view"
		id="product_product_form_view_magento1">
		<field name="name">product.normal.form.magento1</field>
		<field name="model">product.product</field>
		<field name="priority" eval="20"></field>
		<field name="inherit_id" ref="product.product_normal_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='default_code']"
				position="attributes">
				<attribute name="string">SKU</attribute>
			</xpath>

			<!-- <xpath expr="//notebook//page[@name='connector']" position="before"> 
				<page string="Magento" name="magento_attributes"> <button name="%(action_magento_custom_attributes)d" 
				type="action" string="Custom Values" context="{'search_default_product_id': 
				[active_id], 'default_attribute_set_id': attribute_set_id, 'default_product_id': 
				active_id, }" /> <group> <field name="attribute_set_id" /> </group> <separator></separator> 
				<group attrs="{'invisible': [('attribute_set_id', '=', False)]}"> <label 
				for="magento_attribute_line_ids" /> <field name="magento_attribute_line_ids" 
				nolabel="1"> <tree editable="top"> <field name="attribute_id" domain="[('create_variant', 
				'=', False),]" /> <field name="odoo_field_name" /> <field name="magento_attribute_type" 
				readonly="1" /> <field name="attribute_text" /> </tree> </field> </group> 
				<separator></separator> </page> </xpath> -->


			<xpath
				expr="//notebook/page[@name='connector']//field[@name='magento_bind_ids']"
				position="replace">
				<field name="magento_bind_ids" nolabel="1">
					<tree>
						<field name="backend_id" />
						<field name="id" invisible="1" />
						<field name="odoo_id" invisible="1" />
						<field name="attribute_set_id" invisible="0" />
						<!--<field name="product_type" />-->
						<button name="export_product_button"
							string="Export Attributes" type="object" class="oe_highlight" />
						<button name="resync" string="resyn All"
							help="Stck, Attributes, ..." type="object" class="oe_highlight" />
						<button name="action_magento_custom_attributes"
							type="object" string="Custom Values"
							context="{'search_default_product_id': [active_id], 
							'default_attribute_set_id': attribute_set_id,
							'default_magento_product_id': id, }" />
					</tree>
				</field>
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view"
		id="product_attribute_tree_view_magento">
		<field name="name">product.attribute.tree.magento</field>
		<field name="model">product.attribute</field>
		<field name="inherit_id" ref="product.attribute_tree_view" />
		<field name="arch" type="xml">
			<xpath expr="//tree" position="attributes">
				<attribute name="editable"></attribute>
			</xpath>
		</field>
	</record>




	<record id="attribute_action" model="ir.actions.act_window">
		<field name="name">Attributes</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.attribute</field>
		<field name="view_mode">tree,form</field>
		<field name="view_type">form</field>
	</record>

	<record model="ir.ui.view"
		id="product_attribute_form_view_magento">
		<field name="name">product.attribute.form.magento</field>
		<field name="model">product.attribute</field>
		<field name="inherit_id"
			ref="product.product_attribute_view_form"></field>
		<field name="arch" type="xml">
			<xpath expr="//form//group[@name='values_ids']"
				position="replace">
				<notebook>
					<page name="value_page" string="Values">
						<group name="values_ids">
							<label for="value_ids" string="Attribute Values" />
							<field name="value_ids" widget="one2many_list" nolabel="1">
								<tree string="Values" editable="bottom">
									<field name="name" />
								</tree>
								<form string="Values">
									<field name="name" />
								</form>
							</field>
							<field name="create_variant" groups="base.group_no_one" />
						</group>
					</page>
					<page name="magento_page" string="Magento">
						<group>
							<!-- <group name="magento" string="Magento"> <field name="attribute_code" 
								readonly="1" /> <field name="odoo_field_name" /> </group> -->
						</group>
						<field name="magento_bind_ids" />
					</page>

				</notebook>

			</xpath>
		</field>
	</record>


	<record id="action_odoo_product_templates"
		model="ir.actions.act_window">
		<field name="name">Magento Product templates</field>
		<field name="res_model">magento.product.template</field>
		<field name="view_mode">tree,form</field>
	</record>


	<menuitem id="menu_odoo_external_products"
		name="External Product Templates" parent="connector_magento.menu_odoo_external_objects"
		action="action_odoo_product_templates" />


</odoo>
