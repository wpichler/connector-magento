<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="action_odoo_attributes_sets"
			model="ir.actions.act_window">
			<field name="name">Magento Attribute Sets</field>
			<field name="res_model">magento.product.attributes.set</field>
			<field name="view_mode">tree,form</field>
		</record>


		<record id="action_odoo_attributes"
			model="ir.actions.act_window">
			<field name="name">Magento Attributes</field>
			<field name="res_model">magento.product.attribute</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="action_odoo_values" model="ir.actions.act_window">
			<field name="name">Magento Attribute Values</field>
			<field name="res_model">magento.product.attribute.value</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="action_magento_custom_attributes"
			model="ir.actions.act_window">
			<field name="name">Magento Custom Attributes</field>
			<field name="res_model">magento.custom.attribute.values</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="action_magento_custom_template_attributes"
			model="ir.actions.act_window">
			<field name="name">Magento Custom  Attributes for Templates</field>
			<field name="res_model">magento.custom.template.attribute.values</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_odoo_external_custom_attributes_values"
			name="Custom Attribute values"
			parent="connector_magento.menu_odoo_external_objects"
			action="action_magento_custom_attributes" />

		<menuitem id="menu_odoo_external_custom_template_attributes_values"
			name="Custom Attribute values for template"
			parent="connector_magento.menu_odoo_external_objects"
			action="action_magento_custom_template_attributes" />
		<menuitem id="menu_odoo_external_attributes_set"
			name="External Attributes Sets"
			parent="connector_magento.menu_odoo_external_objects"
			action="action_odoo_attributes_sets" />
		<menuitem id="menu_odoo_external_attribute"
			name="External Attributes"
			parent="connector_magento.menu_odoo_external_objects"
			action="action_odoo_attributes" />
		<menuitem id="connector_magento.menu_odoo_external_values"
			name="External Attribute Values"
			parent="connector_magento.menu_odoo_external_objects"
			action="action_odoo_values" />
		<menuitem id="connector_magento.menu_odoo_attributes"
			name="Attributes"
			parent="connector_magento.menu_odoo_external_objects"
			action="magento_product_attribute_action" />

	</data>
</openerp>