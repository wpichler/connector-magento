<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>


		<record id="product_template_form_view" model="ir.ui.view">
			<field name="name">product.template.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id"
				ref="connector_base_product.product_template_common_form" />
			<field name="arch" type="xml">
				<page name="connector" position="attributes">
					<attribute name="invisible">0</attribute>
				</page>
				<page name="connector" position="inside">
					<group string="Magento Template Bindings">
						<field name="magento_template_bind_ids" nolabel="1">
							<tree>
								<field name="backend_id" />
								<button name="export_product_template_button"
									string="Export Template Attributes"
									type="object" />
								<button name="resync" string="resyn All"
									 help="Stck, Attributes, ..."
									type="object" />
								<button name="action_magento_template_custom_attributes"
									type="object" string="Custom Values" 
									 />
							</tree>
						</field>
						<field name="magento_bind_ids" nolabel="1">
							<tree>
								<field name="backend_id" />
								<field name="product_type" />
								<button name="export_product_template_button"
									string="Export Template Attributes"
									type="object" />
								<button name="resync" string="resyn All"
									 help="Stck, Attributes, ..."
									type="object" />
								<button name="action_magento_template_custom_attributes"
									type="object" string="Custom Values"
									 />
							</tree>
						</field>
					</group>
				</page>
			</field>
		</record>


		<record id="view_magento_product_template_form"
			model="ir.ui.view">
			<field name="name">magento.product.template.form</field>
			<field name="model">magento.product.template</field>
			<field name="arch" type="xml">
				<form string="Magento Product">
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="export_product_template_button"
								class="oe_stat_button" string="Export Template Attributes"
								type="object" />
							<button name="resync" string="resyn All"
								class="oe_stat_button" help="Stck, Attributes, ..."
								type="object" />
							<button name="action_magento_template_custom_attributes"
								type="object" string="Custom Values" class="oe_stat_button"
								context="{'search_default_magento_product_id': [active_id], 
							'default_attribute_set_id': attribute_set_id,
							'default_magento_product_id': active_id, }" />

						</div>
						<group name="general">
							<field name="backend_id" />
							<field name="external_id" />
							<field name="attribute_set_id" required="1" />
							<!-- <field name="created_at" readonly="1" /> <field name="updated_at" 
								readonly="1" /> -->
						</group>
						<!-- <group string="Inventory Options" name="inventoy"> <field name="no_stock_sync" 
							/> <field name="manage_stock" /> <field name="backorders" /> <div class="oe_inline"> 
							<label for="magento_qty" class="oe_inline" /> <field name="magento_qty" readonly="1" 
							class="oe_inline" nolabel="1" /> <button name="recompute_magento_qty" string="(recompute)" 
							class="oe_link oe_inline" type="object" /> </div> </group> -->
					</sheet>
				</form>
			</field>
		</record>



		<record id="magento_product_template_tree_view"
			model="ir.ui.view">
			<field name="name">magento.product.template.tree</field>
			<field name="model">magento.product.template</field>

			<field name="arch" type="xml">
				<tree>
					<field name="id" />
					<field name="default_code" />
					<field name="display_name" />
					<field name="odoo_id" />
					<field name="backend_id" />
					<field name="external_id" />
					<!-- <field name="attribute_set_id"/> -->
					<field name="sync_date" />
					<button name="resync" type="object" string="Resync" />
				</tree>
			</field>
		</record>


	</data>
</openerp>